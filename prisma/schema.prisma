// Prisma 7: url/directUrl vanno in prisma.config.ts, non nello schema
datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model FenamMember {
  id              String   @id @default(cuid())
  email           String   @unique
  firstName       String
  lastName        String
  phone           String?
  externalFenamId String?  // ID dal gestionale FENAM, se in futuro vogliamo sincronizzare
  createdAt       DateTime @default(now())

  reservations Reservation[]
}

model Event {
  id              String         @id @default(cuid())
  slug            String         @unique
  title           String
  subtitle        String?
  date            DateTime
  locationName    String
  locationAddress String?
  description     String?
  capacity        Int            // posti massimi; usato per evitare overbooking
  priceCents      Int?           // prezzo in centesimi (es. 7500 = 75â‚¬); null = da hardcodare
  status          String         @default("published") // draft | published | cancelled
  createdAt       DateTime       @default(now())

  reservations Reservation[]
}

model Reservation {
  id                String    @id @default(cuid())
  eventId           String
  fenamMemberId     String
  guests            Int       @default(1) // sempre 1 persona
  status            String    @default("pending_payment") // pending_payment | confirmed | cancelled
  notes             String?
  confirmationCode String?   @unique // es. TULL-XXXXXX, generato dopo capture
  paidAt            DateTime?
  paypalOrderId    String?
  paypalCaptureId  String?
  createdAt         DateTime  @default(now())

  event         Event       @relation(fields: [eventId], references: [id])
  fenamMember   FenamMember @relation(fields: [fenamMemberId], references: [id])
}

