generator client {
  provider = "prisma-client-js"
}

model FenamMember {
  id              String   @id @default(cuid())
  email           String   @unique
  firstName       String
  lastName        String
  phone           String?
  externalFenamId String?  // ID dal gestionale FENAM, se in futuro vogliamo sincronizzare
  createdAt       DateTime @default(now())

  reservations Reservation[]
}

model Event {
  id              String         @id @default(cuid())
  slug            String         @unique
  title           String
  subtitle        String?
  date            DateTime
  locationName    String
  locationAddress String?
  description     String?
  capacity        Int            // posti massimi; usato per evitare overbooking
  status          String         @default("published") // draft | published | cancelled
  createdAt       DateTime       @default(now())

  reservations Reservation[]
}

model Reservation {
  id            String   @id @default(cuid())
  eventId       String
  fenamMemberId String   // customerRef: riferimento membro FENAM
  guests        Int      // posti prenotati (seats)
  status        String   @default("confirmed") // confirmed | cancelled
  notes         String?
  createdAt     DateTime @default(now())

  event         Event       @relation(fields: [eventId], references: [id])
  fenamMember   FenamMember @relation(fields: [fenamMemberId], references: [id])
}

